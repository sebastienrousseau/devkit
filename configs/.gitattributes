*.less text eol=lf
*.svg text eol=lf

# Config
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.xml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Data
*.csv text eol=lf

# Git
.gitattributes text eol=lf
.gitignore text eol=lf
.gitmodules text eol=lf

# Docker
Dockerfile text eol=lf
*.dockerfile text eol=lf
docker-compose*.yml text eol=lf

# CI
Makefile text eol=lf
Jenkinsfile text eol=lf

# Binary files
*.png binary
*.jpg binary
