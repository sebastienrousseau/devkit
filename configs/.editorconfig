# EditorConfig for Sebastien Rousseau Ecosystem
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# Rust
[*.rs]
indent_size = 4

# Python
[*.py]
indent_size = 4

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# TOML
[*.toml]
indent_size = 4

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell
[*.sh]
indent_size = 4

# Makefiles
[Makefile]
indent_style = tab

# Git
[.git*]
indent_size = 4
